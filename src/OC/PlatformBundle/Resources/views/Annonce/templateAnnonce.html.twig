{% extends "OCPlatformBundle:Annonce:template.html.twig" %}

{% block title %}
    Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}
<h2>{{ annonce.titre }}</h2>
<i>par {{ annonce.auteur }} le {{ annonce.date|date('d/m/Y') }}</i>

<div class="well">
    {{ annonce.description }}
</div>

<p>
    <a href="{{ path('oc_platform_accueil') }}" class="btn btn-default"> <i class="glyphicon glyphicon-chevron-left"></i>
    Retour à la liste des annonces
    </a>
    <a href="{{ path('oc_platform_editer', {'id_annonce': annonce.id_annonce }) }}" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i>
    Modifier l'annonce
    </a>
    <a href="{{ path('oc_platform_supprimer', {'id_annonce': annonce.id_annonce }) }}" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i>
        Supprimer l'annonce
    </a>
</p>

<p>
    <a href="{{ path('oc_platform_voir', {'id_annonce': id_annonce_prev}) }}" class="btn btn-default"> <i class="glyphicon glyphicon-chevron-left"></i>
        Annonce précédente
    </a>
    <a href="{{ path('oc_platform_voir', {'id_annonce': id_annonce_next}) }}" class="btn btn-default"> <i class="glyphicon glyphicon-chevron-right"></i>
        Annonce suivante
    </a>
</p>

{% endblock %}
